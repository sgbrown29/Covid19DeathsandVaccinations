--View of essential information in coviddeaths table
SELECT location, date, total_cases, new_cases, total_deaths, population
FROM `portfolioproject-359316.covid19.coviddeaths`
  ORDER BY 1, 2

  
--Looking at total_cases vs. total_deaths, likelihood of getting covid in your country
SELECT location, date, total_cases, total_deaths, (total_deaths/total_cases)*100 AS DeathPercentage
FROM `portfolioproject-359316.covid19.coviddeaths`
WHERE continent IS NOT NULL
  ORDER BY 1,2


--Looking at total cases vs. population
--Percent of Population that got covid
SELECT location, date, total_cases, population, (total_cases/population)*100 AS DeathPercentage
FROM `portfolioproject-359316.covid19.coviddeaths`
WHERE continent IS NOT NULL
  ORDER BY 1, 2
  
  
--Looking at countries with highest infection rate compared to population
SELECT location, population, MAX(total_cases) AS HighestInfectionCount, MAX((total_cases/population))*100 AS PercentPopulationInfected
FROM `portfolioproject-359316.covid19.coviddeaths`
WHERE continent IS NOT NULL
  GROUP BY location, population
  ORDER BY PercentPopulationInfected DESC
  
  
--Showing Countries with highest death count per population
SELECT location, MAX(Total_deaths) AS TotalDeathCount
FROM `portfolioproject-359316.covid19.coviddeaths`
WHERE continent IS NOT NULL
  GROUP BY location
  ORDER BY TotalDeathCount DESC 


-- Death Count By Continent
SELECT location, MAX(Total_deaths) AS TotalDeathCount
FROM `portfolioproject-359316.covid19.coviddeaths`
WHERE location NOT LIKE '%income%' 
  AND location NOT LIKE '%Union%'
  AND continent IS NULL 
  GROUP BY location
  ORDER BY TotalDeathCount DESC


--Death Count by world income level
SELECT location, MAX(Total_deaths) AS TotalDeathCount
FROM `portfolioproject-359316.covid19.coviddeaths`
WHERE location LIKE '%income%' 
  AND location NOT LIKE '%Union%'
  AND continent IS NULL 
  GROUP BY location
  ORDER BY TotalDeathCount DESC


--Global numbers by day per continent
SELECT location, date, total_cases, total_deaths, (total_deaths/total_cases)*100 AS DeathPercentage
FROM `portfolioproject-359316.covid19.coviddeaths`
WHERE continent IS NULL 
  AND location NOT LIKE '%income%' 
  AND location NOT LIKE '%Union%'
  ORDER BY 1, 2


--Looking at total population vs. vaccinations, partition creates a rolling count per country that resets for every change of country in the list.  Output is then saved as a table within covid 19 dataset.  
SELECT dea.continent, dea.location, dea.date, dea.population, vac.new_vaccinations, SUM(new_vaccinations) OVER (PARTITION BY dea.location ORDER BY dea.location, dea.date) AS RollingPeopleVaccinated
FROM `portfolioproject-359316.covid19.coviddeaths` dea
JOIN`portfolioproject-359316.covid19.covidvaccinations` vac
  ON dea.location = vac.location 
  AND dea.date = vac.date
WHERE
  dea.continent IS NOT NULL
ORDER BY 2, 3


--Adds a column in percentpopulationvaccinated that has the percent of population vaccinated per country
SELECT *, (RollingPeopleVaccinated/population)*100 AS percent_vaccinated
FROM `portfolioproject-359316.covid19.percentpopulationvaccinated`


--View of PercentPopulationVaccinated
SELECT *
FROM `portfolioproject-359316.covid19.percentpopulationvaccinated`
WHERE continent IS NOT NULL
ORDER BY 2, 3

